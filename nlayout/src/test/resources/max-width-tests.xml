<flow print="true">
  <flow
    style="max-width: 20px; display: block;"
    expect-width="20px"
    expect-height="10px"
    test-case="max-width with auto size above max"
  >
    <item width="25px" height="10px"/>
  </flow>

  <flow
    style="max-width: 20px; display: block;"
    expect-width="15px"
    expect-height="10px"
    test-case="min-width with auto size below max"
  >
    <item width="15px" height="10px"/>
  </flow>

  <flow
    style="max-width: 20px; width: 25px; height: 10px; display: block;"
    expect-width="20px"
    expect-height="10px"
    test-case="max-width with explicit size above max"
  />

  <flow
    style="max-width: 20px; width: 12px; height: 10px; display: block;"
    expect-width="12px"
    expect-height="10px"
    test-case="max-width with explicit size below max"
  />
</flow>
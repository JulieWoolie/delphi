<flow
  print="true"
  print-sizes="true"
  breakpoint="true"
  screen-width="3"
  screen-height="2"
>
 <flow
   style="width: auto; border:4px; display: block; margin-bottom: 2px;"
   expect-width="10px+4px+8px+8px"
 >
   <flow
     style="height: 20px; border: 2px; display: block;"
     expect-width="10px+4px"
     expect-height="20px+4px"
   >
     <item width="10px" height="10px"/>
   </flow>

   <flow
     style="width: 100%; border:4px; display: block;"
     expect-width="10px+4px+8px"
   >
     <flow
       style="height: 20px; border: 2px;"
     >
       <item width="10px" height="10px"/>
     </flow>
   </flow>

 </flow>
</flow>